<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ComboBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.aplikacjaklienta.HelloController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <GridPane fx:id="criteriaGrid" hgap="10" vgap="10" GridPane.rowIndex="0" GridPane.columnIndex="0">
        <Label fx:id="chooseManufacturer" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="comboManufacturer" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Button fx:id="countManufacturer" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <Label fx:id="displayManufacturerCount" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
        <Label fx:id="chooseMatrixLabel" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
        <ComboBox fx:id="comboMatrixProportions" GridPane.columnIndex="5" GridPane.rowIndex="0"/>
        <Button fx:id="listComputersWithMatrix" GridPane.columnIndex="6" GridPane.rowIndex="0"/>

    </GridPane>

    <TableView fx:id="computerTable" GridPane.columnIndex="0" GridPane.rowIndex="1"></TableView>

</VBox>
